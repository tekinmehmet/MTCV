@using MTCV.Models.ENTITY
@model List<Experience>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Experience Index</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.HEAD</td>
            <td>@item.SUBHEAD</td>
            <td>@item.DESCRIPTION</td>
            <td>@item.DATE</td>
            <td><a class="btn btn-danger" href="/Experience/ExperienceRemove/@item.ID">Sil</a></td>
            <td><a class="btn btn-success" href="#">Düzenle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Experience/ExperienceAdd/" class="btn btn-info">Yeni Deneyim Ekle</a>

