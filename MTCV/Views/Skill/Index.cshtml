@using MTCV.Models.ENTITY
@model List<Skill>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";
    string labelrenk = "";}
<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <a href="/Skill/AddSkill/" class="btn btn-info">Yeni Yetenek Ekle</a>
                                <br />
                                <br />
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 10px">#</th>
                                            <th>Yetenek Adı</th>
                                            <th>Oran</th>
                                            <th style="width: 40px">Yüzde</th>
                                            <th style="width: 185px">İşlemler</th>
                                         
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            if (item.Oran <= 100 & item.Oran >= 80)
                                            {
                                                renk = "progress-bar bg-success";
                                                labelrenk = "progress-bar bg-success";
                                            }
                                            if (item.Oran <= 79 & item.Oran >= 50)
                                            {
                                                renk = "progress-bar bg-cyan";
                                                labelrenk = "progress-bar bg-cyan";
                                            }
                                            if (item.Oran <= 49)
                                            {
                                                renk = "progress-bar bg-danger";
                                                labelrenk = "progress-bar bg-danger";
                                            }
                                            <tr>
                                                <td>@item.ID</td>
                                                <td>@item.SKILL</td>
                                                <td>
                                                    <div class="progress progress-xs">

                                                        <div class="@renk" style="width: @item.Oran%"></div>
                                                    </div>
                                                </td>
                                                <td><span class="@labelrenk">@item.Oran%</span></td>
                                                <td>
                                                    <a href="/Skill/Delete/@item.ID" class="btn btn-danger btn-sm">
                                                        <i class="fas fa-trash"></i>
                                                        Sil
                                                    </a>
                                                    <a href="/Skill/Update/@item.ID" class="btn btn-info btn-sm">
                                                        <i class="fas fa-pencil-alt"></i>
                                                        Düzenle
                                                    </a>
                                                </td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>


                        </div>
                    </div>
                </div>


            </div>
        </section>

    </div>


</body>
</html>


